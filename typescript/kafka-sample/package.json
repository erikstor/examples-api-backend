{
  "name": "kafka-microservices",
  "version": "1.0.0",
  "description": "Microservicios con NestJS y Kafka",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "start:dev": "echo 'No hay archivo main.ts principal. Usa uno de los servicios espec√≠ficos: start:user-service, start:create-user-service, o start:logging-service'",
    "start:user-service": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/user-service/main.ts",
    "start:create-user-service": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/create-user-service/main.ts",
    "start:logging-service": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/logging-service/main.ts",
    "seed:database": "ts-node -r tsconfig-paths/register scripts/seed-database.ts",
    "generate:sample-data": "ts-node -r tsconfig-paths/register scripts/generate-sample-data.ts",
    "check:kibana": "ts-node -r tsconfig-paths/register scripts/quick-check.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.11.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "kafkajs": "^2.2.4",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.27",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/sqlite3": "^3.1.11",
    "@types/uuid": "^9.0.0",
    "jest": "^29.5.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
