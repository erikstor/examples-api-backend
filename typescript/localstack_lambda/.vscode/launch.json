{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Lambda Local",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/local.ts",
      "preLaunchTask": null,
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "runtimeArgs": ["-r", "ts-node/register", "-r", "dotenv/config"],
      "env": {
        "AWS_REGION": "us-east-1",
        "AWS_ENDPOINT": "http://localhost:4566",
        "AWS_ACCESS_KEY_ID": "test",
        "AWS_SECRET_ACCESS_KEY": "test",
        "DYNAMODB_TABLE_NAME": "Users"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Lambda Handler",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/.bin/ts-node",
      "args": [
        "-r",
        "dotenv/config",
        "${workspaceFolder}/src/local.ts"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "AWS_REGION": "us-east-1",
        "AWS_ENDPOINT": "http://localhost:4566",
        "AWS_ACCESS_KEY_ID": "test",
        "AWS_SECRET_ACCESS_KEY": "test",
        "DYNAMODB_TABLE_NAME": "Users"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Init DB",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/scripts/init-dynamodb.ts",
      "runtimeArgs": ["-r", "ts-node/register", "-r", "dotenv/config"],
      "env": {
        "AWS_REGION": "us-east-1",
        "AWS_ENDPOINT": "http://localhost:4566",
        "AWS_ACCESS_KEY_ID": "test",
        "AWS_SECRET_ACCESS_KEY": "test",
        "DYNAMODB_TABLE_NAME": "Users"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Test Lambda",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/scripts/test-lambda.ts",
      "runtimeArgs": ["-r", "ts-node/register", "-r", "dotenv/config"],
      "env": {
        "AWS_REGION": "us-east-1",
        "AWS_ENDPOINT": "http://localhost:4566",
        "AWS_ACCESS_KEY_ID": "test",
        "AWS_SECRET_ACCESS_KEY": "test",
        "DYNAMODB_TABLE_NAME": "Users",
        "LAMBDA_FUNCTION_NAME": "user-handler"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true
    }
  ]
}

